{
  "name": "tg-bot-template",
  "description": "",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.*' --exec 'ts-node -r dotenv/config -r tsconfig-paths/register src/index.ts'",
    "lint": "eslint --ext .ts src",
    "typecheck": "tsc --noEmit",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "db:migrate:create": "mikro-orm migration:create",
    "db:migrate:up": "mikro-orm migration:up",
    "db:migrate:down": "mikro-orm migration:down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yanislav-igonin/tg-bot-template.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yanislav-igonin/tg-bot-template/issues"
  },
  "homepage": "https://github.com/yanislav-igonin/tg-bot-template#readme",
  "devDependencies": {
    "@mikro-orm/cli": "^5.9.3",
    "@mikro-orm/migrations": "^5.9.3",
    "@typescript-eslint/parser": "^5.55.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "eslint-config-canonical": "^40.0.9",
    "nodemon": "^2.0.21",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.3",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.9.3",
    "@mikro-orm/postgresql": "^5.9.3",
    "@prisma/client": "^4.11.0",
    "grammy": "^1.15.3",
    "reflect-metadata": "^0.1.13"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/database.config.ts",
      "./dist/config/database.config.js"
    ]
  }
}
